@model IEnumerable<Hello_EF.Models.Customer>

@{
    ViewData["Title"] = "Index";    
}

<h1>Customers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="FilterByLastName" method="get">
    <div class="d-flex m-1 align-items-center">
        <div class="p-1">Find by name:</div>
        <div class="p-1">
            <input class="form-control" type="text" name="letter" value="" />
        </div>
        <div class="p-1">
            <button type="submit" class="btn btn-primary btn-sm">Search</button>
        </div>
        <div class="p-1">
            <a asp-action="Index" class="btn btn-success btn-sm">Back to full list</a>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                <a asp-action="SortByLastNameCustomers" asp-route-isAscending="@(Model.FirstOrDefault() == Model.OrderBy(r => r.LastName).ToList().FirstOrDefault() ? true : false)">LastName</a>
            </th>
            <th>
                <a asp-action="SortByAddressCustomers" asp-route-isAscending="@(Model.FirstOrDefault() == Model.OrderBy(r => r.Address).ToList().FirstOrDefault() ? true : false)">Address</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
