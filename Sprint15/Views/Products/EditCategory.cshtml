@model List<ProductsValidation.Models.Product>
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Edit category";
}

<h1>Edit Category prices</h1>

<form asp-action="EditCategory" asp-controller="Products" method="post">
    <table class="table form-group">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Id)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model[0].Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Price)
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.TextBoxFor(m => Model[i].Id, new { type = "number", @readonly = "readonly", @class = "form-control" })
                        <br>
                        @Html.ValidationMessageFor(m => Model[i].Id, "", new { @class = "text-danger"})
                    </td>
                    <td style="display:none">
                        @Html.TextBoxFor(m => Model[i].Type, new { @readonly = "readonly", @class = "form-control" })
                        <br>
                        @Html.ValidationMessageFor(m => Model[i].Type, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.TextBoxFor(m => Model[i].Name, new { @readonly = "readonly", @class = "form-control" })
                        <br>
                        @Html.ValidationMessageFor(m => Model[i].Name, "", new { @class = "text-danger" })
                    </td>
                    <td style="display:none">
                        @Html.TextBoxFor(m => Model[i].Description, new { @readonly = "readonly", @class = "form-control" })
                        <br>
                        @Html.ValidationMessageFor(m => Model[i].Description, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.TextBoxFor(m => Model[i].Price, new { type = "number", @class = "form-control" })
                        <br>
                        @Html.ValidationMessageFor(m => Model[i].Price, "", new { @class = "text-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br>
    <input type="submit" value="Save" class="btn btn-primary" />
    
</form>
<br>
<div>
    <input type="button"
           class="btn btn-secondary"
           value="Back to List"
           onclick="@("window.location.href='" + @Url.Action("Index", "Products") + "'");">
</div>